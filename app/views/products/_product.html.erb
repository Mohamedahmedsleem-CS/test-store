<div class="container" >
   <% @products.each do |product| %>
   <div class="row justify-content-md-center" > 
    <div class="col-8 mt-4"><!-- margin 4 space  -->
      <div class="card text-center shadow  mb-5 bg-white rounded">
        <div class="card-body">
          <h5 class="card-title"><%=  link_to product.name,product_path(product),class: "text-success" %></h5>
						<div style="width: 100px; height: 50px;">
							<%= image_tag product.image ,class: "img-thumbnail mt-3" if product.image.attached? %>
						</div>
		          <p class="card-text"><%= truncate(product.description, length: 8) %></p>
		
							<%= number_to_currency(product.price) %> 
          	<div class="d-flex justify-content-md-center ">
          		<%= link_to 'Show', product_path(product),class: "btn btn-outline-success" %>
            	<%= link_to 'Edit', edit_product_path(product),class: "btn btn-outline-info"  %>
              <%= button_to "Delete", product, class: "btn btn-outline-primary " ,method: :delete   %>           
  				 </div>
  				 <div class="justify-content-md-center">
  				 	<small> Created <%=time_ago_in_words(product.created_at) %> ago
    	     , edited <%= time_ago_in_words(product.updated_at) %> ago </small>
  				 </div>


        </div>
			</div>
		</div>
	</div>
		<% end %>
</div>






